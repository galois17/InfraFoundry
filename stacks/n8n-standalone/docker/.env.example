#  PORTS 
PORT=5678

#  VERSIONS 
# Pinning versions is a best practice for stability
N8N_VERSION=1.121.1
POSTGRES_VERSION=16-alpine
REDIS_VERSION=6-alpine

#  SECURITY & SECRETS 
# Generate a secure key for N8N (e.g., using `openssl rand -hex 32`)
N8N_ENCRYPTION_KEY=super-secret-encryption-key-change-me

#  DATABASE CONFIG 
POSTGRES_USER=root_user
POSTGRES_PASSWORD=root_password_change_me
POSTGRES_DB=n8n_db

#  N8N SPECIFIC DB USER (Best Practice) 
# It is good practice to have n8n use a non-root user
POSTGRES_NON_ROOT_USER=n8n_user
POSTGRES_NON_ROOT_PASSWORD=n8n_password_change_me

#  TIMEZONE 
GENERIC_TIMEZONE=UTC
